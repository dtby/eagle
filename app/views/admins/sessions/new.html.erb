<% content_for :login_nav do %>
  <%= render partial: "share/login_nav" %>
<% end %>

<div class="middle-box text-center animated">
  <div class="col-xs-10 col-xs-offset-1 mblock clearfix login-form">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="col-xs-6 col-xs-offset-3 login-img">
        <span>
          <%= image_tag "login.png", class: "img-circle img-responsive" %>
        </span>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div class="input-group m-b">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "手机号或者邮箱" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group m-b">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "输入密码" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="input-group m-b">
            <%= f.check_box :remember_me %>&nbsp;
            <%= f.label "记住我" %>
          </div>
        </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "管理员登录", class: "btn btn-success btn-block" %>
        </div>
      <% end %>
      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>
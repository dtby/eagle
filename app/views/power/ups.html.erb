<script type="text/javascript">
	//设置3个模块的高度
	var left = document.body.clientHeight - 100;
	var r_t = left * 0.4 - 25;
	var r_b = left * 0.6 -25;
	$(".left").height(left);
	$(".part-bar").height(r_t);
	$("#ups_bar").height(r_t-20);
	$(".part-pie").height(r_b);
	$("#ups_pie").height(r_b);

	// 路径配置
	require.config({
		paths: {
			echarts: '/assets/echarts'
		}
	});

	// 使用
	require(
		[
			'echarts',
			'echarts/chart/bar', // 使用柱状图就加载bar模块，按需加载
			'echarts/chart/pie'
		],
		function (bar) {
			// 基于准备好的dom，初始化echarts图表
			var upsBar = bar.init(document.getElementById('ups_bar'), 'macarons'); 

			var option = {
				grid : {
					y : 5,
					x2 : 5,
					y2 : 5,
					x : 5
				},
				tooltip : {
					trigger: 'axis'
				},
				xAxis : [
					{
						type : 'category',
						data : ['','','','','','','','','','','','','','','','','','','','','','','','']
					}
				],
				yAxis : [
					{
						type : 'value'
					}
				],
				series : [
					{
						name:'负载率',

<div class="container-fuild">
	<div class="row">
		<div class="col-xs-6 p-xs">
			<div class="panel panel-default">
				<div class="panel-heading text-center">数据显示</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-xs-6 text-center">
							<%=image_tag"power-cabinet.png",width:"80%"%>
						</div>                                                                
						<div class="col-xs-6"> 
							<div class="table-responsive cabinet-table">
								<table class="table table-bordered">
									<thead>
										<tr>
											<th colspan="2">输出</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<th scope="row">总有功功率</th>
											<td>230.4</td>
										</tr>
										<tr>
											<th scope="row">总无关功率</th>
											<td>232.1</td>
										</tr>
										<tr>
											<th scope="row">功率因数</th>
											<td>230.4</td>
										</tr>
										<tr>
											<th scope="row">频率</th>
											<td>230.4</td>
										</tr>
										<tr>
											<th scope="row">电度</th>
											<td>230.4</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-6 p-xs">
			<div class="panel panel-default">
				<div class="panel-heading text-center">输出负载率</div>
				<div class="panel-body">
					<div class="col-xs-4">
						<div id="load1" style="height:134px"></div>
					</div>
					<div class="col-xs-4">
						<div id="load2" style="height:134px"></div>
					</div>
					<div class="col-xs-4">
						<div id="load3" style="height:134px"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 p-xs">
			<div class="panel panel-default">
				<div class="panel-heading text-center">功率</div>
				<div class="panel-body"></div>
			</div>
		</div>
		<div class="col-xs-6 p-xs">
			<div class="panel panel-default">
				<div class="panel-heading text-center">电压</div>
				<div class="panel-body"></div>
			</div>
		</div>
	</div>
	
</div>
<script type="text/javascript">
        // 路径配置
        require.config({
        	paths: {
        		echarts: '/assets/echarts'
        	}
        });
        
        // 使用
        require(
        	[
        	'echarts',
                'echarts/chart/pie' // 使用柱状图就加载bar模块，按需加载
                ],
                function (ec) {
                // 基于准备好的dom，初始化echarts图表
                var myChart = ec.init(document.getElementById('load1')); 
                
                var option = {
                	tooltip : {
                		trigger: 'item',
                		formatter: "{a} <br/>{b} : {c} ({d}%)"
                	},
                	legend: {
                		orient : 'vertical',
                		x : 'left',
                		data:['搜索引擎']
                	},
                	calculable : true,
                	series : [
                	{
                		name:'访问来源',
                		type:'pie',
                		radius : '55%',
                		center: ['50%', '60%'],
                		data:[
                		{value:1161, name:'75%'}
                		]
                	}
                	]
                };
                // 为echarts对象加载数据 
                myChart.setOption(option); 
              }
              );
</script>
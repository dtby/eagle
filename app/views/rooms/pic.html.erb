<%= form_tag pic_room_path(@room), method: :get, class: 'form-horizontal', role: "form" do %>
  <div class="form-group col-sm-4">
    <label class="col-sm-3 control-label no-padding-right text-right" for="form-field-1" style="padding: 3px 0;"> 起始时间 </label>
    <div class="col-sm-9">
      <%= date_field_tag :start_time, params[:start_time], required: true, class: "col-sm-12" %>
    </div>
  </div>
  <div class="form-group col-sm-4">
    <label class="col-sm-3 control-label no-padding-right text-right" for="form-field-1" style="padding: 3px 0;"> 截止时间 </label>
    <div class="col-sm-9">
      <%= date_field_tag :end_time, params[:end_time], required: true, class: "col-sm-12" %>
    </div>
  </div>
  <%= submit_tag "搜索", class: "btn btn-xs btn-default" %>
<% end %>
<div class="row">
  <div class="col-xs-12">
    <div class="row-fluid">
      <ul class="ace-thumbnails">
        <% @pics.each do |pic|%>
          <li class="main-images-list col-sm-2">
            <%= link_to "/monitor/#{pic}", title: pic do %>
              <%= image_tag "/monitor/#{pic}", :size => "150x150" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
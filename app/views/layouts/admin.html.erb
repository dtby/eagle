<!DOCTYPE html>
<html>
<head>
  <title>iGrid监控平台后台管理系统</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="//cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
</head>

	<body>
		<div id="wrapper">
			<!-- 左侧导航栏部分 -->
			<%= render partial: "/admin/share/left_bar" %>

			<!-- 右侧内容页 -->
			<div id="page-wrapper" class="gray-bg">
				<!-- 顶部导航 -->
				<%= render partial: "/admin/share/top_bar" %>

				<!-- 右侧中间内容部分 -->
				<div class="row wrapper eagle-content <%= controller.controller_path.gsub('/','__') + '__' + controller.action_name %>">
					<div class="clearfix">
						<%= yield %>
					</div>
				</div>

				<!-- 页脚 -->
				<%= render partial: "/admin/share/footer" %>
			</div>
		</div>
		<!-- 只有一个panel时设置满屏高度 -->
		<script>
			$(function(){
				var content = document.body.clientHeight;
				$(".panel-height").height(content - 200);
				$(".mblock-height").height(content - 171)
			})
		</script>	
	</body>

</html>

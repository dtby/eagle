<!DOCTYPE html>
<html>
<head>
  <title>iGrid监控平台后台管理系统</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

	<body>
		<div id="wrapper">
			<!-- 左侧导航栏部分 -->
			<%= render partial: "/admin/share/left_bar" %>

			<!-- 右侧内容页 -->
			<div id="page-wrapper" class="gray-bg">
				<!-- 顶部导航 -->
				<%= render partial: "/admin/share/top_bar" %>

				<!-- 右侧中间内容部分 -->
				<div class="row wrapper eagle-content <%= controller.controller_path.gsub('/','__') + '__' + controller.action_name %>">
					<div class="clearfix">
						<%= yield %>
					</div>
				</div>

				<!-- 页脚 -->
				<%= render partial: "/admin/share/footer" %>

				<!-- 皮肤及设置 -->
				<%= render partial: "/admin/share/setting" %>
			</div>
		</div>
		<script>
			$(function(){
				var content = document.body.clientHeight - 200;
				$(".panel-height").height(content);
			})
		</script>	
	</body>

</html>

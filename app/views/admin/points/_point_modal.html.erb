<div id="pointModal" class="modal fade point-modal" aria-hidden="true" style="margin-top: 60px;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title"><span class="text-primary"><%= point.name %></span><small>数据设置</small></h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for [:admin, point], remote: true, format: :js do |f| %>
              <div class="form-group">
                <div class="col-lg-2 form-label">点位名称</div>
                <div class="input-group input-padding col-lg-10">
                  <%= f.text_field :name, class: 'form-control', placeholder: '点位名称'%>
                </div>
                <% if point.errors[:name].any? %>
                  <dd class="error text-danger"><%= point.errors[:name][0] %></dd>
                <% end %>
              </div>
              <div class="form-group">
                <div class="col-lg-2 form-label">点位类型</div>
                <div class="input-group input-padding col-lg-10">
                  <%= f.text_field :point_type, class: 'form-control', :readonly => true %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-2 form-label">上上限</div>
                <div class="input-group input-padding col-lg-10">
                  <%= f.text_field :u_up_value, class: 'form-control', placeholder: '上上限'%>
                </div>
                <% if point.errors[:u_up_value].any? %>
                  <dd class="error text-danger"><%= point.errors[:u_up_value][0] %></dd>
                <% end %>
              </div>
              <div class="form-group">
                <div class="col-lg-2 form-label">上限</div>
                <div class="input-group input-padding col-lg-10">
                  <%= f.text_field :max_value, class: 'form-control', placeholder: '上限'%>
                </div>
                <% if point.errors[:max_value].any? %>
                  <dd class="error text-danger"><%= point.errors[:max_value][0] %></dd>
                <% end %>
              </div>
              <div class="form-group">
                <div class="col-lg-2 form-label">下限</div>
                <div class="input-group input-padding col-lg-10">
                  <%= f.text_field :min_value, class: 'form-control', placeholder: '下限'%>
                </div>
                <% if point.errors[:min_value].any? %>
                  <dd class="error text-danger"><%= point.errors[:min_value][0] %></dd>
                <% end %>
              </div>
              <div class="form-group">
                <div class="col-lg-2 form-label">下下限</div>
                <div class="input-group input-padding col-lg-10">
                  <%= f.text_field :d_down_value, class: 'form-control', placeholder: '下下限'%>
                </div>
                <% if point.errors[:d_down_value].any? %>
                  <dd class="error text-danger"><%= point.errors[:d_down_value][0] %></dd>
                <% end %>
              </div>
              <div class="form-group">
                <div class="col-lg-2 form-label">报表</div>
                <div class="input-group input-padding col-lg-10">
                  <%= f.select :s_report, [['关闭',0], ['打开', 1]], {}, {class: 'form-control'} %>
                </div>
                <% if point.errors[:s_report].any? %>
                  <dd class="error text-danger"><%= point.errors[:s_report][0] %></dd>
                <% end %>
              </div>
              <div class="form-group">
                <div class="col-lg-2 form-label">首屏告警</div>
                <div class="input-group input-padding col-lg-10">
                  <%= f.select :main_alarm_show, [['隐藏',0], ['显示', 1]], {}, {class: 'form-control'} %>
                </div>
                <% if point.errors[:main_alarm_show].any? %>
                  <dd class="error text-danger"><%= point.errors[:main_alarm_show][0] %></dd>
                <% end %>
              </div>
              <div class="form-group">
                <div class="col-lg-2 form-label">显示区域</div>
                <div class="input-group input-padding col-lg-10">
                  <%= f.text_field :comment, class: 'form-control', placeholder: '显示区域'%>
                </div>
                <% if point.errors[:comment].any? %>
                  <dd class="error text-danger"><%= point.errors[:comment][0] %></dd>
                <% end %>
              </div>

              <div class="text-center">
                <button class="btn sub-btn btn-primary" type="submit">
                  <strong>提交</strong>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>

</script>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>机房[<%= @room.name %>] 设备详细表</h5>
        </div>
        <div class="ibox-content">
          <div class="col-lg-2 device-area">
            <ul class="device-seletor">
              <% @devices.each do |id, name| %>
                <%= link_to admin_room_devices_path(room_id: @room.id, device_id: id) do %>
                <li><%= name %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
          <div class="col-lg-10 points-area">
            <table class="table table-striped table-bordered table-hover dataTable no-footer">
              <thead>
                <tr>
                  <td>点名</td>
                  <td>类型</td>
                  <td>上上限</td>
                  <td>上限</td>
                  <td>下限</td>
                  <td>下下限</td>
                  <td>报表</td>
                  <td>首屏告警</td>
                  <td>区块</td>
                  <td></td>
                </tr>
              </thead>
              <% @points.each do |point| %>
                <tr>
                  <td><%= point.name %></td>
                  <td><%= point.point_type %></td>
                  <td><%= point.u_up_value %></td>
                  <td><%= point.max_value %></td>
                  <td><%= point.min_value %></td>
                  <td><%= point.d_down_value %></td>
                  <td><%= point.s_report %></td>
                  <td><%= point.main_alarm_show %></td>
                  <td><%= point.comment %></td>
                  <td>
                    <%= link_to admin_point_path(point), class: 'btn btn-xs btn-default', title: '编辑', remote: true, format: :js do %>
                    <span class="glyphicon glyphicon-edit"></span>
                  <% end %>
                  </td>
                </tr>
              <% end %>
              <tfoot>
              <tr>
                <td colspan="10">
                  <div class="pagination pagination-centered pull-right">
                    <%= will_paginate @points, renderer: BootstrapPagination::Rails ,:remote => {:update => 'messages'} %>
                        
                  </div>
                </td>
              </tr>
            </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="pointModalContent"></div>

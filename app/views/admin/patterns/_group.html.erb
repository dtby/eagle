<div id="patternsGroup<%= index %>" class="ibox float-e-margins">
  <div class="ibox-title">
    <h5><%= group %></h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th class="text-center" width="50%">数据</th>
          <th class="text-center">是否显示</th>
        </tr>
      </thead>
      <tbody>
        <% points.each do |point| %>
          <tr>
            <td><%= point %></td>
            <td><input type="checkbox" class="js-switch-disabled" checked /></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
    <a data-toggle="modal" class="btn btn-primary" href="#modal-form<%= index %>">设置</a>
    </div>
    <%= render partial: 'setting', locals: {group: group, points: points, index: index} %>
  </div>
</div>
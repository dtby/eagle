<div class="clearfix weitu">
  <div class="col-xs-12 p-xs text-center animated fadeInRightBig">
    <div class="panel panel-default">
      <div class="panel-heading">空调实时数据</div>
      <div class="panel-body">
        <div class="col-xs-12 top-area">
          <div class="col-md-3">
            <%=image_tag "10-1.png", class: 'air-img' %>
          </div>

          <% if @points["GIF"].present? %>
            <div class="col-md-5 col-md-offset-2">
              <div class="panel panel-default">
                <div class="panel-heading">运行参数</div>
                <div class="panel-body water-tab">
                  <div class="col-xs-6 water_g water_g1"><%= (@points["GIF"]["温度测量值"] || @points["GIF"]["回风温度"]).to_f.round(1) %>&#8451;</div>
                  
                  <div class="col-xs-6 water_g water_g2"><%= (@points["GIF"]["湿度测量值"] || @points["GIF"]["回风湿度"]).to_f.round(1) %>%</div>
                  
                  <div class="col-xs-12">
                    <% unless exclude_points["GIF"] && exclude_points["GIF"].include?("温度设点") %>
                      <span class="grey_d grey_d1">温度设点</span><span class="grey_d grey_d2"><%= @points["GIF"]["温度设点"] %>%</span>
                    <% end %>
                    <% unless exclude_points["GIF"] && exclude_points["GIF"].include?("湿度设点") %>
                      <span class="grey_d grey_d3">湿度设点</span><span class="grey_d grey_d2"><%= @points["GIF"]["湿度设点"] %>%</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <% if @points["开关"].present? %>
            <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-heading">开关状态</div>
                <div class="panel-body switch-container">
                  <% @points["开关"].each do |key, value| %>
                    <div class='col-xs-6 switch-area'>
                      <div class="content">
                        <div class="title"><%= key.split('-')[-1] %></div>
                        <div class="myswitcher">
                          <label class="myswitcher-label <%= value == '0' ? 'myswitcher-apart' : 'myswitcher-comb' %>">
                            <span class="myswitcher-inner"><%= value == '0' ? '分' : '合' %></span>
                            <span class="myswitcher-switch"></span>
                          </label>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-xs-12">
          <!-- 告警信息：图标 -->
          <%= render partial: "devices/share/warn_info_icon", locals: { points: @points, points_key: "告警" } %>
        </div>
      </div>
    </div>
  </div>
</div>
